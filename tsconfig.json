{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "baseUrl": "./",
    "paths": {
      "@romainfallet/http-routing": ["./libs/domain/http-routing/src/index.ts"]
    }
  },
  "exclude": ["*.json"],
  "files": ["./typings.d.ts"]
}
